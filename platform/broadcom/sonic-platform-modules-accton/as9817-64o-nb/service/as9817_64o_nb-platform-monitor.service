[Unit]
Description=Accton AS9817-64O-NB Platform Monitoring service
Before=pmon.service
After=as9817_64o_nb-platform-init.service
Requires=as9817_64o_nb-platform-init.service

[Service]
ExecStart=/usr/local/bin/accton_as9817_64_monitor.py
KillSignal=SIGKILL
SuccessExitStatus=SIGKILL
#StandardOutput=tty

# Resource Limitations
LimitCORE=infinity

[Install]
WantedBy=multi-user.target
